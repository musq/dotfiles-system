#!/usr/bin/env bash

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

main() {

    # ------------------------------------------------------------------
    # | PS1 - Primary prompt                                           |
    # ------------------------------------------------------------------

    PS1="\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]$ "

    export PS1

    # ------------------------------------------------------------------
    # | PS2 - Continuation interactive prompt                          |
    # ------------------------------------------------------------------

    PS2="> "

    export PS2

}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

main "$@"

unset -f main
